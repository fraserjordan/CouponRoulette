@model Business.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<form method="POST" action="/Account/ResetPassword" name="form" ng-controller="resetPasswordController">
    @Html.AntiForgeryToken()
    <div class="FormContent">
        <md-card class="ResetPasswordFormContainer" style="height: auto;">
            <md-card-title class="NoPadding">
                <md-card-title-text style="text-align: center;">
                    <md-toolbar class="CardFormSectionHeaderContainer md-theme-light">
                        <h1 class="CardFormSectionHeader">
                            <span>Reset password</span>
                        </h1>
                    </md-toolbar>
                    <div class="InputContainer">
                        <md-input-container style="margin-bottom: 0;">
                            <label>Email</label>
                            <input name="Email" type="email" ng-model="email" ng-required="true"/>
                            @Html.Partial("_AngularMessages", "form.Email")
                        </md-input-container>
                    </div>
                    <div class="InputContainer">
                        <md-input-container style="margin-bottom: 0;">
                            <label>New Password</label>
                            <input name="Password" type="password" ng-model="password" match="confirmPassword" ng-required="true"/>
                            @Html.Partial("_AngularMessages", "form.Password")
                        </md-input-container>
                    </div>
                    <div class="InputContainer">
                        <md-input-container style="margin-bottom: 0;">
                            <label>Confirm password</label>
                            <input name="ConfirmPassword" type="password" ng-model="confirmPassword" match="password" ng-required="true"/>
                            @Html.Partial("_AngularMessages", "form.ConfirmPassword")
                        </md-input-container>
                    </div>
                    @Html.HiddenFor(x => x.Code)
                    <div style="width: 100%;">
                        <md-button ng-click="submit(form)" ng-disabled="!form.$valid" class="ManageActionButton Button md-primary">Reset password</md-button>
                    </div>
                </md-card-title-text>
            </md-card-title>
        </md-card>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>

