@model Business.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<form method="POST" action="/Account/ForgotPassword" name="form" ng-controller="forgotPasswordController">
    @Html.AntiForgeryToken()
    <div>
        <div class="content-container">
            <div class="content-header">
                <h1 style="color: white;">Forgot Password</h1>
            </div>
            <div class="content-body">
                <md-content class="md-no-momentum" layout-margin>
                    <md-input-container class="md-block">
                        <label>Please enter your email</label>
                        <input name="Email" type="email" ng-model="email" ng-required="true" />
                        @Html.Partial("_AngularMessages", "form.Email")
                    </md-input-container>
                    <md-input-container class="md-block">
                        <md-button ng-click="submit(form)" ng-disabled="!form.$valid" class="action-button button md-primary">Send password reset link</md-button>
                    </md-input-container>
                </md-content>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
</form>