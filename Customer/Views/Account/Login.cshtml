@model Customer.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://apis.google.com/js/platform.js" async defer></script>
<meta name="google-signin-client_id" content="363572496373-tn42gftgl916gglv7de1mv57tbssuq6h.apps.googleusercontent.com">

<title>Login - Simple Coupons></title>

<form method="POST" action="/Account/Login" name="form" ng-controller="loginController">
    <div class="FormContent">
        <md-card class="LoginFormContainer" style="height: auto;">
            <md-card-title class="NoPadding">
                <md-card-title-text style="text-align: center;">
                    <md-toolbar class="CardFormSectionHeaderContainer md-theme-light">
                        <h1 class="CardFormSectionHeader">
                            <span>Login</span>
                        </h1>
                    </md-toolbar>
                    <div class="InputContainer">
                        <md-input-container style="text-align: center; margin-bottom: 0;">
                            <label>email</label>
                            @Html.TextBoxFor(m => m.Email, new { tabindex = "1", ng_required = "true", type = "email", ng_model = "email" })
                            @Html.Partial("_AngularMessages", "form.Email")
                        </md-input-container>
                    </div>
                    <div class="InputContainer">
                        <md-input-container style="margin-bottom: 0;">
                            <label>password</label>
                            @Html.PasswordFor(m => m.Password, new { tabindex = "2", type = "password", ng_required = "true", ng_model = "password" })
                            @Html.Partial("_AngularMessages", "form.Password")
                        </md-input-container>
                    </div>
                    <div class="InputContainer">
                        <md-checkbox name="RememberMe" ng-disabled="isSubmitting" ng-model="rememberMe" ng-change="SwitchRememberMe()"></md-checkbox><label>remember me?</label>
                        <div style="display: none;">
                            @Html.CheckBoxFor(m => m.RememberMe, new { tabindex = "3", id = "RememberMe" })
                        </div>
                    </div>
                    <div style="width: 100%;">
                        <md-button ng-disabled="!form.$valid" ng-click="login()" class="ManageActionButton Button md-primary">Login</md-button>
                        <label class="ForgotPasswordLinkContainer"><a href="/Account/ForgotPassword">Forgot password?</a></label>
                    </div>
                </md-card-title-text>
            </md-card-title>
        </md-card>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>
